<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <div class="row" m-1 p-1>
        <div id="teams" class="col-2">
            <img src="/basket-801708_640.jpg" class="responsive-image" />
        </div>
        <div class="title-background text-white text-md-center col-10">
            <span class="navbar-brand ml-2">Welkom bij Team Manager</span>
        </div>
    </div>


    <div class="row" m-1 p-1>
        <div id="teams" class="col-2">
            <vc:Teams></vc:Teams>
        </div>
        <div class="col-10">@RenderBody()</div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Portal - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

